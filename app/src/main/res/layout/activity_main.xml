<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/btnvoltar"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagem_perfil"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/perfil_provisorio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="-250dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/textViewNomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/imagem_perfil"
        app:layout_constraintTop_toTopOf="@+id/imagem_perfil"
        android:layout_marginStart="10dp" />

    <View
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:id="@+id/tmb"
        android:layout_marginLeft="15dp"
        style="@style/button_opcoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagem_perfil" />

    <TextView
        android:id="@+id/textViewTMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sua TMB é: "
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="@+id/tmb"
        app:layout_constraintStart_toStartOf="@+id/tmb"
        app:layout_constraintEnd_toEndOf="@+id/tmb"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="-100dp" />

    <View
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:id="@+id/imc"
        android:layout_marginLeft="15dp"
        style="@style/button_opcoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tmb" />

    <TextView
        android:id="@+id/textViewIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seu IMC é: "
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="@+id/imc"
        app:layout_constraintStart_toStartOf="@+id/imc"
        app:layout_constraintEnd_toEndOf="@+id/imc"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="-100dp" />
</androidx.constraintlayout.widget.ConstraintLayout>