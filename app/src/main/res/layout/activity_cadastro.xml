<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".cadastro">

    <View
        android:id="@+id/container_components"
        style="@style/ContainerComponents"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/cadastro"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Cadastre-se"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/container_components"
        app:layout_constraintStart_toStartOf="@id/container_components"
        app:layout_constraintTop_toTopOf="@id/container_components" />

    <EditText
        android:id="@+id/cadastro_nome"
        style="@style/edit_text"
        android:layout_height="48dp"
        android:hint="Digite seu nome"
        android:textColor="@color/white"
        android:textColorHint="@color/hint"
        app:layout_constraintStart_toEndOf="@id/container_components"
        app:layout_constraintStart_toStartOf="@id/container_components"
        app:layout_constraintTop_toBottomOf="@id/cadastro" />

    <EditText
        android:id="@+id/cadastro_email"
        android:layout_height="48dp"
        android:hint="Digite seu endereço de E-mail"
        android:textColorHint="@color/hint"
        android:textColor="@color/white"
        style="@style/edit_text"
        app:layout_constraintStart_toStartOf="@id/container_components"
        app:layout_constraintStart_toEndOf="@id/container_components"
        app:layout_constraintTop_toBottomOf="@id/cadastro_nome"/>

    <EditText
        android:id="@+id/cadastro_senha"
        android:hint="Digite sua senha"
        android:textColorHint="@color/hint"
        style="@style/edit_text_senha"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/container_components"
        app:layout_constraintStart_toEndOf="@id/container_components"
        app:layout_constraintTop_toBottomOf="@id/cadastro_email"/>

    <EditText
        android:id="@+id/confirma_senha"
        style="@style/edit_text_confirma"
        android:layout_width="156dp"
        android:hint="Confirmar senha"
        android:textColorHint="@color/hint"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/container_components"
        app:layout_constraintStart_toStartOf="@id/container_components"
        app:layout_constraintTop_toBottomOf="@id/cadastro_email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cadastro_botao_proximo"
        style="@style/button"
        android:hint="Próximo"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/container_components"
        app:layout_constraintStart_toStartOf="@id/container_components"
        app:layout_constraintTop_toBottomOf="@id/cadastro_senha" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>