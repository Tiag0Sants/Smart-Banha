<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".cadastro">

    <ImageView
        android:id="@+id/btnvoltar"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/smart_banha"
        android:layout_width="149dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="SMART BANHA"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/container_components"
        style="@style/ContainerComponents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/smart_banha" />

    <TextView
        android:id="@+id/cadastro"
        android:layout_width="136dp"
        android:layout_height="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Cadastre-se"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/container_components"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/container_components"
        app:layout_constraintTop_toTopOf="@+id/container_components" />

    <EditText
        android:id="@+id/cadastro_nome"
        style="@style/edit_text"
        android:layout_height="48dp"
        android:hint="Digite seu nome"
        android:textColor="@color/white"
        android:textColorHint="@color/hint"
        app:layout_constraintEnd_toEndOf="@+id/container_components"
        app:layout_constraintStart_toEndOf="@id/container_components"
        app:layout_constraintStart_toStartOf="@id/container_components"
        app:layout_constraintTop_toBottomOf="@id/cadastro" />

    <EditText
        android:id="@+id/cadastro_email"
        style="@style/edit_text"
        android:layout_height="48dp"
        android:hint="Digite seu endereço de E-mail"
        android:textColor="@color/white"
        android:textColorHint="@color/hint"
        app:layout_constraintEnd_toEndOf="@+id/container_components"
        app:layout_constraintStart_toEndOf="@id/container_components"
        app:layout_constraintStart_toStartOf="@id/container_components"
        app:layout_constraintTop_toBottomOf="@id/cadastro_nome" />

    <EditText
        android:id="@+id/cadastro_senha"
        style="@style/edit_text_senha"
        android:layout_marginStart="30dp"
        android:hint="Digite sua senha"
        android:textColor="@color/white"
        android:textColorHint="@color/hint"
        app:layout_constraintStart_toEndOf="@id/container_components"
        app:layout_constraintStart_toStartOf="@id/container_components"
        app:layout_constraintTop_toBottomOf="@id/cadastro_email" />

    <EditText
        android:id="@+id/confirma_senha"
        style="@style/edit_text_confirma"
        android:layout_width="156dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:hint="Confirmar senha"
        android:textColor="@color/white"
        android:textColorHint="@color/hint"
        app:layout_constraintEnd_toEndOf="@+id/container_components"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toEndOf="@+id/cadastro_senha"
        app:layout_constraintTop_toBottomOf="@id/cadastro_email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cadastro_botao_proximo"
        style="@style/button"
        android:hint="Próximo"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/container_components"
        app:layout_constraintStart_toEndOf="@id/container_components"
        app:layout_constraintStart_toStartOf="@id/container_components"
        app:layout_constraintTop_toBottomOf="@id/cadastro_senha" />


</androidx.constraintlayout.widget.ConstraintLayout>