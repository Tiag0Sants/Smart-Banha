<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".perfil">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/btnvoltar"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/foto_perfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/perfil_provisorio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <View
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/container_components"
        app:layout_constraintTop_toBottomOf="@+id/foto_perfil"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/perfil_titulo_nome"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/info"
        app:layout_constraintTop_toTopOf="@+id/info"
        android:text="Nome:"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/perfil_nome"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_bold"
        android:text=""
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/info"
        app:layout_constraintTop_toTopOf="@+id/info" />

    <TextView
        android:id="@+id/perfil_idade"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/info"
        app:layout_constraintTop_toBottomOf="@+id/perfil_titulo_nome"
        android:text="Idade:"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/perfil_altura"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/info"
        app:layout_constraintTop_toBottomOf="@+id/perfil_idade"
        android:text="Altura:"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/perfil_atv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/info"
        app:layout_constraintTop_toBottomOf="@+id/perfil_altura"
        android:text="Nivel de atividade:"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/perfil_objetivo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/info"
        app:layout_constraintTop_toBottomOf="@+id/perfil_atv"
        android:text="Objetivo:"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        tools:ignore="UnknownId" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/perfil_botao_sair"
        style="@style/button"
        android:text="Sair"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toStartOf="@id/info"
        app:layout_constraintStart_toEndOf="@id/info"
        app:layout_constraintTop_toBottomOf="@id/perfil_objetivo"
        tools:ignore="NotSibling" />

</androidx.constraintlayout.widget.ConstraintLayout>